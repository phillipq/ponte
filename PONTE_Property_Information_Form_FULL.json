{
  "title": "PONTE Property Information Form",
  "description": "Please complete all fields below to submit a property for review by the PONTE team.",
  "sections": [
    {
      "section_title": "SECTION 1 – Property Identification",
      "questions": [
        {
          "title": "Property Name / Reference ID",
          "type": "SHORT_ANSWER"
        },
        {
          "title": "Full Address (Street, Town, Province, Postal Code)",
          "type": "PARAGRAPH_TEXT"
        },
        {
          "title": "Region",
          "type": "DROPDOWN",
          "options": [
            "Marche",
            "Tuscany",
            "Umbria",
            "Puglia",
            "Abruzzo",
            "Sicily",
            "Sardinia",
            "Other"
          ]
        },
        {
          "title": "Province / Comune",
          "type": "SHORT_ANSWER"
        },
        {
          "title": "GPS Coordinates (latitude, longitude)",
          "type": "SHORT_ANSWER"
        },
        {
          "title": "Listing Type",
          "type": "MULTIPLE_CHOICE",
          "options": [
            "For Sale",
            "For Rent",
            "Both"
          ]
        },
        {
          "title": "Property Type",
          "type": "DROPDOWN",
          "options": [
            "Villa",
            "Country House",
            "Apartment",
            "Palazzo",
            "Farmhouse",
            "Trullo",
            "Historical Building",
            "Other"
          ]
        },
        {
          "title": "Year Built / Last Renovated",
          "type": "SHORT_ANSWER"
        },
        {
          "title": "Ownership Type",
          "type": "MULTIPLE_CHOICE",
          "options": [
            "Private",
            "Company",
            "Historical Building",
            "Agricultural Land"
          ]
        }
      ]
    },
    {
      "section_title": "SECTION 2 – Property Description",
      "questions": [
        {
          "title": "Short Summary (2–3 sentences describing key features)",
          "type": "PARAGRAPH_TEXT"
        },
        {
          "title": "Full Description",
          "type": "PARAGRAPH_TEXT"
        },
        {
          "title": "Architectural Style",
          "type": "DROPDOWN",
          "options": [
            "Modern",
            "Rustic",
            "Historical",
            "Contemporary",
            "Mediterranean",
            "Other"
          ]
        },
        {
          "title": "Orientation",
          "type": "DROPDOWN",
          "options": [
            "North",
            "South",
            "East",
            "West",
            "Multiple Directions"
          ]
        },
        {
          "title": "Condition",
          "type": "MULTIPLE_CHOICE",
          "options": [
            "New",
            "Recently Renovated",
            "Needs Renovation",
            "Requires Full Restoration"
          ]
        },
        {
          "title": "Energy Efficiency Class",
          "type": "DROPDOWN",
          "options": [
            "A4",
            "A3",
            "A2",
            "A1",
            "B",
            "C",
            "D",
            "E",
            "F",
            "G",
            "Unknown"
          ]
        }
      ]
    },
    {
      "section_title": "SECTION 3 – Size & Layout",
      "questions": [
        {
          "title": "Total Living Area (m²)",
          "type": "SHORT_ANSWER"
        },
        {
          "title": "Total Land Size (m² or hectares)",
          "type": "SHORT_ANSWER"
        },
        {
          "title": "Number of Floors / Levels",
          "type": "SHORT_ANSWER"
        },
        {
          "title": "Number of Bedrooms",
          "type": "SHORT_ANSWER"
        },
        {
          "title": "Number of Bathrooms",
          "type": "SHORT_ANSWER"
        },
        {
          "title": "Kitchen(s)",
          "type": "MULTIPLE_CHOICE",
          "options": [
            "Yes – Open Layout",
            "Yes – Closed Layout",
            "No"
          ]
        },
        {
          "title": "Living / Dining Areas",
          "type": "MULTIPLE_CHOICE",
          "options": [
            "Combined",
            "Separate"
          ]
        },
        {
          "title": "Office / Study Room",
          "type": "YES_NO"
        },
        {
          "title": "Cellar / Basement",
          "type": "YES_NO"
        },
        {
          "title": "Attic / Loft",
          "type": "YES_NO"
        },
        {
          "title": "Garage / Covered Parking (capacity)",
          "type": "SHORT_ANSWER"
        },
        {
          "title": "Outbuildings (guesthouse, barn, etc.)",
          "type": "PARAGRAPH_TEXT"
        },
        {
          "title": "Terrace(s) / Balcony(ies)",
          "type": "YES_NO"
        },
        {
          "title": "Laundry / Utility Room",
          "type": "YES_NO"
        }
      ]
    },
    {
