        },
        {
          "title": "Agency Commission (% and who pays)",
          "type": "SHORT_ANSWER"
        },
        {
          "title": "Annual Property Tax (IMU)",
          "type": "SHORT_ANSWER"
        },
        {
          "title": "Utility Costs Estimate (€ / month or year)",
          "type": "SHORT_ANSWER"
        },
        {
          "title": "Ownership Documents Available",
          "type": "YES_NO"
        },
        {
          "title": "Urban Planning Compliance Verified",
          "type": "MULTIPLE_CHOICE",
          "options": [
            "Yes",
            "No",
            "Unknown"
          ]
        },
        {
          "title": "Property Currently Occupied",
          "type": "YES_NO"
        },
        {
          "title": "Easements or Restrictions",
          "type": "PARAGRAPH_TEXT"
        }
      ]
