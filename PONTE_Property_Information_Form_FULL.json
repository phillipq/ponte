      "questions": [
        {
          "title": "Water Source",
          "type": "MULTIPLE_CHOICE",
          "options": [
            "Municipal",
            "Private Well",
            "Shared Well"
          ]
        },
        {
          "title": "Heating System",
          "type": "CHECKBOXES",
          "options": [
            "Gas",
            "Fireplace",
            "Pellet Stove",
            "Heat Pump",
            "Radiators",
            "Other"
          ]
        },
        {
          "title": "Cooling / Air Conditioning",
          "type": "YES_NO"
        },
        {
          "title": "Electricity Connection",
          "type": "YES_NO"
        },
        {
          "title": "Sewage Type",
          "type": "MULTIPLE_CHOICE",
          "options": [
            "Public",
            "Septic Tank"
          ]
        },
        {
          "title": "Internet Availability",
          "type": "DROPDOWN",
          "options": [
            "Fiber",
            "ADSL",
            "Mobile",
            "None"
          ]
        },
        {
          "title": "Solar / Renewable Energy Systems",
          "type": "PARAGRAPH_TEXT"
        },
        {
          "title": "Road Access Condition",
          "type": "DROPDOWN",
          "options": [
            "Paved",
            "Gravel",
            "Steep/Unpaved",
            "Limited"
          ]
        }
      ]
    },
    {
      "section_title": "SECTION 5 – Outdoor Features & Amenities",
      "questions": [
        {
          "title": "Swimming Pool",
          "type": "MULTIPLE_CHOICE",
          "options": [
            "Yes – In-ground",
            "Yes – Above-ground",
            "No"
          ]
        },
        {
          "title": "Garden / Landscaping",
          "type": "PARAGRAPH_TEXT"
        },
        {
          "title": "Olive Grove / Vineyard / Orchard",
          "type": "PARAGRAPH_TEXT"
        },
        {
          "title": "Patio / Courtyard",
          "type": "YES_NO"
        },
        {
          "title": "Outdoor Kitchen / BBQ Area",
          "type": "YES_NO"
        },
        {
          "title": "Views",
          "type": "CHECKBOXES",
          "options": [
            "Sea",
            "Countryside",
            "Mountains",
            "Town",
            "Valley",
            "Other"
          ]
        },
        {
          "title": "Fencing / Gates",
          "type": "MULTIPLE_CHOICE",
          "options": [
            "None",
            "Manual",
            "Electric"
          ]
        },
        {
          "title": "Parking Spaces (number)",
          "type": "SHORT_ANSWER"
        }
      ]
    },
    {
      "section_title": "SECTION 6 – Location & Proximity",
      "questions": [
        {
          "title": "Nearest Town / Village",
          "type": "SHORT_ANSWER"
        },
        {
          "title": "Distance to Nearest Town (km)",
          "type": "SHORT_ANSWER"
        },
        {
          "title": "Distance to Coast (km)",
          "type": "SHORT_ANSWER"
        },
        {
          "title": "Distance to Nearest Airport (name + km)",
          "type": "SHORT_ANSWER"
        },
        {
          "title": "Distance to Train Station (km)",
          "type": "SHORT_ANSWER"
        },
        {
          "title": "Distance to Shops / Restaurants / Medical / Schools",
          "type": "PARAGRAPH_TEXT"
        },
        {
          "title": "Notable Nearby Attractions (historic centers, beaches, wineries, etc.)",
          "type": "PARAGRAPH_TEXT"
        }
      ]
    },
    {
      "section_title": "SECTION 7 – Legal & Financial Details",
      "questions": [
        {
          "title": "Asking Price (€)",
          "type": "SHORT_ANSWER"
        },
        {
          "title": "Negotiable",
