# App Configuration
APP_ID="your-app-name"  # Unique identifier for this app instance (e.g., "ai-chatbot", "doc-analyzer")
APP_NAME="Your App Name"  # Display name for the app (e.g., "AI Chatbot Pro")
APP_DOMAIN="localhost:3012"  # Production domain (e.g., "chatbot.yourdomain.com")
PORT="3012"  # Server port (default: 3012)

# Admin Configuration
ADMIN_EMAIL="admin@yourdomain.com"  # Admin email for this specific app
MASTER_ADMIN_EMAIL="admin@yourdomain.com"  # Master admin email (same across all apps)
IS_MASTER_ADMIN="false"  # Set to "true" only for your master admin dashboard
MASTER_ADMIN_URL="https://admin.yourdomain.com"  # URL of your master admin dashboard

# Database (Local PostgreSQL)
# Local PostgreSQL database on worker.local server
# Replace [YOUR-PASSWORD] with your actual database password
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@worker.local:5432/app_ponte"

# NextAuth.js
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3012"

# Google OAuth (optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Stripe
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Google Maps API (for geocoding and distance matrix)
GOOGLE_MAPS_API_KEY=""
GOOGLE_MAPS_GEOCODING_API_KEY=""
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=""

# OpenAI API (for AI-powered property data extraction)
OPENAI_API_KEY=""

# Bundle Analyzer
ANALYZE="false"
